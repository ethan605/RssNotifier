<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/bg" >
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#8E1B01" >

        <TextView
            android:id="@+id/rss_item_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/rss_setting_title"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/service_setting"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" >

        <TextView
            android:id="@+id/txt_service_setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/service_title"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/txt_service_setting_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txt_service_setting_title"
            android:textSize="11sp"
            android:text="@string/service_running" />

        <CheckBox
            android:id="@+id/ckbox_service_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/time_interval_setting"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" >

        <TextView
            android:id="@+id/txt_time_interval_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time Interval"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/txt_time_interval_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txt_time_interval_title"
            android:layout_toLeftOf="@+id/txt_time_interval_value"
            android:layout_marginRight="20dp"
            android:textSize="11sp"
            android:text="Amount of time for notification service to regularly check for new RSS update" />

        <TextView
            android:id="@+id/txt_time_interval_value"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="10 minutes" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/max_item_load_setting"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" >

        <TextView
            android:id="@+id/txt_max_item_load_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maximum Item Load"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/txt_max_item_load_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/txt_max_item_load_value"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/txt_max_item_load_title"
            android:textSize="11sp"
            android:text="Maximum number of items will be loaded when there're too many news" />
        
        <TextView
            android:id="@+id/txt_max_item_load_value"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="20 items" />

    </RelativeLayout>

</LinearLayout>